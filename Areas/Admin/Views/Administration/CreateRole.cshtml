@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}
<div class="form-group row mt-4">
    <label class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <label class="#">Create New Role</label>
    </div>
</div>

<form asp-action="CreateRole" method="post" class="mt-1">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="RoleName" class="form-control" placeholder="Name">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="btn-group" style="width:350px">
                <input type="submit" class="btn btn-info form-control mr-3" value="Create" />
                <a asp-action="ListRoles" class="btn btn-primary form-control">Back to List</a>
            </div>
            @*<div class="col-2">
                <input type="submit" class="btn btn-info form-control" value="Create" />
            </div>
            <div class="col-2">
                <a asp-action="ListRoles" class="btn btn-primary form-control">Back to List</a>
            </div>*@
