@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-info">Create New Account</h2>
<hr />
<br />

<div style="border-radius:5px;background-color:#f2f2f2;padding:40px;">
    <div class="row">
        <div class="col-md-10">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.DisplayName" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Input.DisplayName" class="form-control" />
                        <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.Gender" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Input.Gender" class="form-control" />
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.Email" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.Password" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                @*<br />
                    <hr />
                    <h3>Additional informations</h3>*@


                <div class="form-group row">
                    <div class="col-3 offset-2">
                        <button type="submit" class="btn btn-primary form-control">Register</button>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
