@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppNews</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebAppNews</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Guest" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Guest" asp-controller="News" asp-action="Index">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Guest" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Guest" asp-controller="Home" asp-action="ContactUs">Contact</a>
                        </li>

                        @*https://code-maze.com/send-email-with-attachments-aspnetcore-2/
        web site where is was found link how to send email using .net core *@
                        @*<li class="nav-item">
            <a class="nav-link text-danger" asp-area="Guest" asp-controller="Home" asp-action="SendNewEmail">Email</a>
        </li>*@
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown text-light font-weight-bold">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navbarDropDownMenuLink" role="button"
                                   data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false">
                                    Administration
                                </a>

                                <div class="dropdown-menu" aria-labelledby="navbarDropDownMenuLink">

                                    <a class="dropdown-item" asp-area="Admin"
                                       asp-controller="Administration"
                                       asp-action="Index"> Users </a>

                                    <a class="dropdown-item" asp-area="Admin"
                                       asp-controller="Administration"
                                       asp-action="ListRoles"> Roles </a>

                                    <a class="dropdown-item" asp-area="Admin"
                                       asp-controller="News"
                                       asp-action="Index"> News </a>
                                </div>

                            </li>
                        }

                        @*@if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown text-light font-weight-bold">
                                <a class="nav-link dropdown-toggle" href="#"
                                   id="navbarDropDownMenuLink" role="button"
                                   data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false">
                                    Administration
                                </a>

                                <div class="dropdown-menu" aria-labelledby="navbarDropDownMenuLink">

                                    <a class="dropdown-item" asp-area="Admin"
                                       asp-controller="Administration"
                                       asp-action="Index"> Users </a>

                                    <a class="dropdown-item" asp-area="Admin"
                                       asp-controller="Administration"
                                       asp-action="ListRoles"> Roles </a>
                                </div>

                            </li>
                        }*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebAppNews - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
